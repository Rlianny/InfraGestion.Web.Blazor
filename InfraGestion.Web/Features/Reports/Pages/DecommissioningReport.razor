@page "/reportes/bajas-anuales"
@page "/director/reports/decommissionings"
@page "/reports/decommissioning"
@using InfraGestion.Web.Features.Reports.DTOs
@using InfraGestion.Web.Features.Reports.Services
@inject FrontendReport ReportService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Registro de Bajas Anuales - InfraCom</PageTitle>

<div class="report-page">
    <!-- Header -->
    <PageHeader Title="Registro de Bajas Anuales" 
                Description="Listado de equipos dados de baja en el último año">
        <Actions>
            <button class="btn-back" @onclick="GoBack">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
                Volver
            </button>
            <ExportButton Text="Exportar PDF" OnClick="ExportToPdf" IsLoading="isExporting" />
        </Actions>
    </PageHeader>

    <!-- Summary Stats -->
    @if (!isLoading && reportData.Any())
    {
        <div class="stats-container">
            <StatCard Label="Total Bajas" Value="@reportData.Count.ToString()" Color="red">
                <IconContent>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                    </svg>
                </IconContent>
            </StatCard>
        </div>
    }

    <!-- Table -->
    <DataTable TItem="DecommissioningReportDto" Items="reportData" IsLoading="isLoading" ColumnCount="6"
               EmptyText="No se encontraron equipos dados de baja en el último año">
        <HeaderTemplate>
            <th>ID Equipo</th>
            <th>Nombre del Equipo</th>
            <th>Causa de Baja</th>
            <th>Destino Final</th>
            <th>Receptor</th>
        </HeaderTemplate>
        <RowTemplate Context="item">
            <td class="id-cell">DEV@(item.EquipmentId.ToString("D3"))</td>
            <td class="name-cell">@item.EquipmentName</td>
            <td>
                <span class="cause-badge @GetCauseClass(item.DecommissionCause)">
                    @item.DecommissionCause
                </span>
            </td>
            <td>@item.FinalDestination</td>
            <td>@item.ReceiverName</td>
        </RowTemplate>
    </DataTable>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
            @errorMessage
        </div>
    }
</div>

@code {















    private List<DecommissioningReportDto> reportData = new();
    private bool isLoading = true;
    private bool isExporting = false;
    private string? errorMessage;

    private byte[] bytes;
    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        try
        {
            isLoading = true;
            errorMessage = null;


            var report = await ReportService.GenerateDecommissioningReportAsync();

            reportData = report.ReportData;

            bytes = report.PdfBytes;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar el reporte: {ex.Message}";
            Console.WriteLine($"[DecommissioningReport] Error: {ex.Message}");

        }
        finally
        {
            isLoading = false;
        }
    }



    private void GoBack()
    {
        Navigation.NavigateTo("/reportes");
    }

    private async Task ExportToPdf()
    {
        try
        {
            isExporting = true;
            StateHasChanged();



            var pdfBytes = bytes;
            var base64 = Convert.ToBase64String(pdfBytes);
            await JS.InvokeVoidAsync("downloadFile", "reporte-bajas-anuales.pdf", "application/pdf", base64);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error exporting PDF: {ex.Message}");
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }

    private string GetCauseClass(string cause)
    {
        return cause.ToLower() switch
        {
            var c when c.Contains("irreparable") => "cause-failure",
            var c when c.Contains("obsolescencia") => "cause-obsolete",
            var c when c.Contains("mantenimiento") => "cause-maintenance",
            _ => "cause-other"
        };
    }
}
