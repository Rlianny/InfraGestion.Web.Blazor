@using InfraGestion.Web.Features.Technicians.Models
@using InfraGestion.Web.Features.Organization.Services
@using System.ComponentModel.DataAnnotations
@inject OrganizationService OrganizationService

<EditForm Model="@FormModel" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    
    <div class="form-group">
        <label for="name" class="form-label">Nombre*</label>
        <input type="text" 
               id="name" 
               class="form-input" 
               @bind="FormModel.FullName" 
               placeholder="Ingrese el nombre completo" />
        <ValidationMessage For="@(() => FormModel.FullName)" class="validation-message" />
    </div>

    <div class="form-row">
        <div class="form-group">
            <label for="department" class="form-label">Departamento</label>
            @if (isLoadingDepartments)
            {
                <div class="loading-select" style="padding: 10px; background: #f5f5f5; border-radius: 4px;">
                    <span>Cargando departamentos...</span>
                </div>
            }
            else if (availableDepartments.Any())
            {
                <select id="department" class="form-input" @bind="FormModel.DepartmentId">
                    <option value="">Sin asignar</option>
                    @foreach (var dept in availableDepartments)
                    {
                        <option value="@dept.Id">@dept.Name</option>
                    }
                </select>
            }
            else
            {
                <p class="text-muted">No hay departamentos disponibles</p>
            }
            <ValidationMessage For="@(() => FormModel.DepartmentId)" class="validation-message" />
        </div>

        <div class="form-group">
            <label for="yearsOfExperience" class="form-label">AÃ±os de experiencia</label>
            <input type="number" 
                   id="yearsOfExperience" 
                   class="form-input" 
                   @bind="FormModel.YearsOfExperience" 
                   placeholder="Ej: 5"
                   min="0"
                   max="50" />
        </div>
    </div>

    <div class="form-group">
        <label for="specialty" class="form-label">Especialidad</label>
        <input type="text" 
               id="specialty" 
               class="form-input" 
               @bind="FormModel.Specialty" 
               placeholder="Ej: Redes, Servidores, etc." />
    </div>

    <div class="form-actions">
        <button type="button" class="btn-cancel" @onclick="OnCancel">
            Cancelar
        </button>
        <button type="submit" class="btn-save">
            <svg class="btn-icon" viewBox="0 0 256 256" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M216,40H40A16,16,0,0,0,24,56V200a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A16,16,0,0,0,216,40ZM176,88a8,8,0,0,1-16,0V64H96V88a8,8,0,0,1-16,0V56a8,8,0,0,1,8-8h80a8,8,0,0,1,8,8Zm24,112H56V152a8,8,0,0,1,8-8H192a8,8,0,0,1,8,8Z"/>
            </svg>
            Guardar
        </button>
    </div>
</EditForm>

@code {
    [Parameter]
    public UpdateTechnicianRequest FormModel { get; set; } = new();

    [Parameter]
    public EventCallback<UpdateTechnicianRequest> OnValidSubmit { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private List<(int Id, string Name)> availableDepartments = new();
    private bool isLoadingDepartments = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDepartments();
    }

    private async Task LoadDepartments()
    {
        isLoadingDepartments = true;
        availableDepartments = await OrganizationService.GetSectionOptionsAsync();
        isLoadingDepartments = false;
    }

    private async Task HandleValidSubmit()
    {
        await OnValidSubmit.InvokeAsync(FormModel);
    }
}
