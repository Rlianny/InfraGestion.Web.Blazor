    <!-- Filters -->
    <FilterBar>
        <SearchBox>
            <SearchBox @bind-Value="searchTerm" Placeholder="Buscar por ID, nombre, ..." OnSearch="HandleSearch" />
        </SearchBox>
        <Filters>
            <FilterSelect @bind-Value="selectedType" OnChange="HandleFilterChange">
                <option value="">Tipo: Todos</option>
                @foreach (var type in GetAvailableTypes())
                {
                    <option value="@type">@DeviceTypeHelper.GetTypeDisplayName(type)</option>
                }
            </FilterSelect>

            <FilterSelect @bind-Value="selectedState" OnChange="HandleFilterChange">
                <option value="">Estado: Todos</option>
                @foreach (var state in GetAvailableStates())
                {
                    <option value="@state">@OperationalStateHelper.GetStateDisplayName(state)</option>
                }
            </FilterSelect>

            <FilterSelect @bind-Value="selectedLocation" OnChange="HandleFilterChange">
                <option value="">Ubicaci贸n Actual: Todos</option>
                @foreach (var location in GetAvailableLocations())
                {
                    <option value="@location">@location</option>
                }
            </FilterSelect>

            <ExportButton Text="Exportar" />
        </Filters>
    </FilterBar>

    <!-- Table -->
    <DataTable TItem="Device" Items="filteredDevices" IsLoading="isLoading" ColumnCount="6" 
               EmptyText="No se encontraron equipos que coincidan con los filtros aplicados">
        <HeaderTemplate>
            <th>ID de equipo</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Ubicaci贸n</th>
            <th class="actions-column"></th>
        </HeaderTemplate>
        <RowTemplate Context="device">
            <td class="id-cell">DEV@(device.Id.ToString("D3"))</td>
            <td class="name-cell">@device.Name</td>
            <td>
                <span class="type-badge @DeviceTypeHelper.GetTypeBadgeClass(device.Type)">
                    @DeviceTypeHelper.GetTypeDisplayName(device.Type)
                </span>
            </td>
            <td>
                <StatusBadge DisplayText="@OperationalStateHelper.GetStateDisplayName(device.State)"
                    BadgeClass="@OperationalStateHelper.GetStateBadgeClass(device.State)" />
            </td>
            <td class="location-cell">@device.Location</td>
            <td class="actions-cell">
                <ActionButtons ShowTransfer="true" ShowView="true"
                    TransferTooltip="Solicitar traslado"
                    ViewTooltip="Ver detalles"
                    OnTransfer="@(() => RequestTransfer(device.Id))"
                    OnView="@(() => NavigateToDetails(device.Id))" />
            </td>
        </RowTemplate>
    </DataTable>
</div>

@code {
    private List<Device> allDevices = new();
    private List<Device> filteredDevices = new();
    private int currentSectionId = 0;
    private Dictionary<string, int> statistics = new()
    {
        { "Total", 0 },
        { "UnderRevision", 0 },
        { "Revised", 0 },
        { "Operational", 0 },
        { "UnderMaintenance", 0 },
        { "Decommissioned", 0 },
        { "BeingTransferred", 0 }
    };
    private bool isLoading = true;

    private string searchTerm = string.Empty;
    private string selectedType = string.Empty;
    private string selectedState = string.Empty;
    private string selectedLocation = string.Empty;

    private List<DeviceType> GetAvailableTypes()
    {
        return allDevices
            .Select(d => d.Type)
            .Distinct()
            .OrderBy(t => DeviceTypeHelper.GetTypeDisplayName(t))
            .ToList();
    }

    private List<OperationalState> GetAvailableStates()
    {
        return allDevices
            .Select(d => d.State)
            .Distinct()
            .OrderBy(s => OperationalStateHelper.GetStateDisplayName(s))
            .ToList();
    }

    private List<string> GetAvailableLocations()
    {
        return allDevices
            .Select(d => d.Location)
            .Where(l => !string.IsNullOrWhiteSpace(l))
            .Distinct()
            .OrderBy(l => l)
            .ToList();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadSectionId();
        await LoadDevices();
        CalculateStatistics();
    }

    private async Task LoadSectionId()
    {
        try
        {
            var currentUser = await AuthService.GetCurrentUserAsync();
            if (currentUser != null)
            {
                currentSectionId = await OrganizationService.GetSectionIdByDepartmentAsync(currentUser.DepartmentId);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading section ID: {ex.Message}");
        }
    }

    private async Task LoadDevices()
    {
        isLoading = true;
        try
        {
            if (currentSectionId != 0)
            {
                // Load only devices from the manager's section
                allDevices = await DeviceService.GetSectionDevicesAsync(currentSectionId);
                Console.WriteLine($"[DEBUG] ManagerInventory - loaded {allDevices.Count} devices for section {currentSectionId}");
            }
            else
            {
                // Fallback: load all devices
                allDevices = await DeviceService.GetAllDevicesAsync();
                Console.WriteLine($"[DEBUG] ManagerInventory - sectionId=0, loaded {allDevices.Count} devices (all)");
            }
            filteredDevices = allDevices;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading devices: {ex.Message}");
            allDevices = new List<Device>();
            filteredDevices = new List<Device>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CalculateStatistics()
    {
        statistics["Total"] = allDevices.Count;
        statistics["UnderRevision"] = allDevices.Count(d => d.State == OperationalState.UnderRevision);
        statistics["Revised"] = allDevices.Count(d => d.State == OperationalState.Revised);
        statistics["Operational"] = allDevices.Count(d => d.State == OperationalState.Operational);
        statistics["UnderMaintenance"] = allDevices.Count(d => d.State == OperationalState.UnderMaintenance);
        statistics["Decommissioned"] = allDevices.Count(d => d.State == OperationalState.Decommissioned);
        statistics["BeingTransferred"] = allDevices.Count(d => d.State == OperationalState.BeingTransferred);
    }

    private void HandleSearch()
    {
        ApplyLocalFilters();
    }

    private void HandleFilterChange()
    {
        ApplyLocalFilters();
    }

    private void ApplyLocalFilters()
    {
        var query = allDevices.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(d =>
                d.Id.ToString().Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                d.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                d.Location.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrEmpty(selectedType))
        {
            var typeFilter = Enum.Parse<DeviceType>(selectedType);
            query = query.Where(d => d.Type == typeFilter);
        }

        if (!string.IsNullOrEmpty(selectedState))
        {
            var stateFilter = Enum.Parse<OperationalState>(selectedState);
            query = query.Where(d => d.State == stateFilter);
        }

        if (!string.IsNullOrEmpty(selectedLocation))
        {
            query = query.Where(d => d.Location.Equals(selectedLocation, StringComparison.OrdinalIgnoreCase));
        }

        filteredDevices = query.ToList();
    }

    private void RequestTransfer(int deviceId)
    {
        // Navigate to transfer request page or open modal
        Navigation.NavigateTo($"/manager/transfers?deviceId={deviceId}");
    }

    private void NavigateToDetails(int deviceId)
    {
        Navigation.NavigateTo($"/manager/inventory/{deviceId}");
    }
}
