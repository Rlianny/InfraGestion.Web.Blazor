@using InfraGestion.Web.Features.Organization.Models

<div class="form-container">
    <div class="form-group">
        <label for="name" class="form-label">Nombre*</label>
        <input type="text" 
               id="name" 
               class="form-input" 
               @bind="FormModel.Name" 
               placeholder="Conmutación y Enrutamiento Avanzado" />
        @if (showNameError)
        {
            <div class="validation-message">El nombre del departamento es requerido</div>
        }
    </div>

    <div class="form-group">
        <label for="section" class="form-label">Sección*</label>
        <select id="section" class="form-input" value="@selectedSectionIdString" @onchange="OnSelectChanged">
            <option value="">Seleccione una sección</option>
            @foreach (var sec in Sections)
            {
                <option value="@sec.Id">@sec.Name</option>
            }
        </select>
        @if (showSectionError)
        {
            <div class="validation-message">Debe seleccionar una sección</div>
        }
    </div>

    <div class="form-actions">
        <button type="button" class="btn-cancel" @onclick="OnCancel">
            Cancelar
        </button>
        <button type="button" class="btn-save" @onclick="HandleSubmit">
            <svg class="btn-icon" viewBox="0 0 256 256" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M224,128a8,8,0,0,1-8,8H128v88a8,8,0,0,1-16,0V136H24a8,8,0,0,1,0-16h88V32a8,8,0,0,1,16,0v88h88A8,8,0,0,1,224,128Z"/>
            </svg>
            Crear Departamento
        </button>
    </div>
</div>

@code {
    [Parameter]
    public CreateDepartmentRequest FormModel { get; set; } = new();

    [Parameter]
    public List<(int Id, string Name)> Sections { get; set; } = new();

    [Parameter]
    public EventCallback<CreateDepartmentRequest> OnValidSubmit { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private string selectedSectionIdString = "";
    private bool showSectionError = false;
    private bool showNameError = false;

    protected override void OnParametersSet()
    {
        Console.WriteLine($"OnParametersSet - Sections.Count: {Sections.Count}");
        foreach (var sec in Sections)
        {
            Console.WriteLine($"  Section: Id={sec.Id}, Name={sec.Name}");
        }
    }

    private void OnSelectChanged(ChangeEventArgs e)
    {
        selectedSectionIdString = e.Value?.ToString() ?? "";
        Console.WriteLine($"Select changed to: '{selectedSectionIdString}'");
        showSectionError = false; // Clear error when user makes selection
    }

    private async Task HandleSubmit()
    {
        Console.WriteLine($"HandleSubmit - selectedSectionIdString: '{selectedSectionIdString}'");
        
        // Validar nombre
        showNameError = string.IsNullOrWhiteSpace(FormModel.Name);
        
        // Validar y convertir sección (permitir IDs negativos del API)
        if (!string.IsNullOrEmpty(selectedSectionIdString) && int.TryParse(selectedSectionIdString, out var sectionId) && sectionId != 0)
        {
            FormModel.SectionId = sectionId;
            showSectionError = false;
            Console.WriteLine($"SectionId set to: {sectionId}");
        }
        else
        {
            showSectionError = true;
            Console.WriteLine($"Section validation failed - selectedSectionIdString was: '{selectedSectionIdString}'");
        }

        // Si todo es válido, enviar
        if (!showNameError && !showSectionError)
        {
            Console.WriteLine($"Submitting form with SectionId: {FormModel.SectionId}");
            await OnValidSubmit.InvokeAsync(FormModel);
        }
    }
}
