@using InfraGestion.Web.Features.Transfers.Models
@using Microsoft.AspNetCore.Components.Forms

<EditForm Model="@FormModel" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    
    <div class="form-group">
        <label for="device" class="form-label">Equipo*</label>
        <select id="device" class="form-input" @bind="FormModel.DeviceId">
            <option value="">Seleccione un equipo</option>
            @foreach (var device in Devices)
            {
                <option value="@device.Id">@device.Id - @device.Name</option>
            }
        </select>
        <ValidationMessage For="@(() => FormModel.DeviceId)" class="validation-message" />
    </div>

    <div class="form-group">
        <label for="origin" class="form-label">Origen*</label>
        <select id="origin" class="form-input" @bind="FormModel.Origin">
            <option value="">Seleccione el origen</option>
            @foreach (var location in Locations)
            {
                <option value="@location">@location</option>
            }
        </select>
        <ValidationMessage For="@(() => FormModel.Origin)" class="validation-message" />
    </div>

    <div class="form-group">
        <label for="destination" class="form-label">Destino*</label>
        <select id="destination" class="form-input" @bind="FormModel.Destination">
            <option value="">Seleccione el destino</option>
            @foreach (var location in Locations)
            {
                <option value="@location">@location</option>
            }
        </select>
        <ValidationMessage For="@(() => FormModel.Destination)" class="validation-message" />
    </div>

    <div class="form-group">
        <label for="transferDate" class="form-label">Fecha de Traslado*</label>
        <input type="date" 
               id="transferDate" 
               class="form-input" 
               @bind="FormModel.TransferDate" />
        <ValidationMessage For="@(() => FormModel.TransferDate)" class="validation-message" />
    </div>

    <div class="form-group">
        <label for="receiverName" class="form-label">Receptor del equipo*</label>
        <input type="text" 
               id="receiverName" 
               class="form-input" 
               @bind="FormModel.ReceiverName"
               placeholder="Nombre del receptor" />
        <ValidationMessage For="@(() => FormModel.ReceiverName)" class="validation-message" />
    </div>

    <div class="form-group">
        <label for="notes" class="form-label">Notas</label>
        <textarea id="notes" 
                  class="form-input form-textarea" 
                  @bind="FormModel.Notes" 
                  placeholder="Observaciones adicionales..."
                  rows="3"></textarea>
        <ValidationMessage For="@(() => FormModel.Notes)" class="validation-message" />
    </div>

    <div class="form-actions">
        <button type="button" class="btn-cancel" @onclick="OnCancel">
            Cancelar
        </button>
        <button type="submit" class="btn-save">
            <svg class="btn-icon" viewBox="0 0 256 256" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M224,128a8,8,0,0,1-8,8H128v88a8,8,0,0,1-16,0V136H24a8,8,0,0,1,0-16h88V32a8,8,0,0,1,16,0v88h88A8,8,0,0,1,224,128Z"/>
            </svg>
            Crear Traslado
        </button>
    </div>
</EditForm>

@code {
    [Parameter]
    public CreateTransferRequest FormModel { get; set; } = new();

    [Parameter]
    public List<(string Id, string Name)> Devices { get; set; } = new();

    [Parameter]
    public List<string> Locations { get; set; } = new();

    [Parameter]
    public EventCallback<CreateTransferRequest> OnValidSubmit { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private async Task HandleValidSubmit()
    {
        await OnValidSubmit.InvokeAsync(FormModel);
    }
}
