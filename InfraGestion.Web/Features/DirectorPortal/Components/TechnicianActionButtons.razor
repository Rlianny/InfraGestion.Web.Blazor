@code {
    [Parameter]
    public EventCallback OnRate { get; set; }

    [Parameter]
    public EventCallback OnBonus { get; set; }

    [Parameter]
    public EventCallback OnPenalty { get; set; }

    private async Task HandleRate()
    {
        if (OnRate.HasDelegate) await OnRate.InvokeAsync(null);
    }

    private async Task HandleBonus()
    {
        if (OnBonus.HasDelegate) await OnBonus.InvokeAsync(null);
    }

    private async Task HandlePenalty()
    {
        if (OnPenalty.HasDelegate) await OnPenalty.InvokeAsync(null);
    }
