@* ExportButton Component - Reusable export button with icon and variants *@

<button class="export-btn @GetVariantClass()" @onclick="OnClick" disabled="@(IsDisabled || IsLoading)">
    @if (IsLoading)
    {
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        <span>Exportando...</span>
    }
    else
    {
        @if (ShowIcon)
        {
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
            </svg>
        }
        @Text
    }
</button>

@code {
    /// <summary>
    /// Button text content
    /// </summary>
    [Parameter]
    public string Text { get; set; } = "Exportar";

    /// <summary>
    /// Button variant: primary, secondary, outline
    /// </summary>
    [Parameter]
    public string Variant { get; set; } = "secondary";

    /// <summary>
    /// Whether to show the download icon
    /// </summary>
    [Parameter]
    public bool ShowIcon { get; set; } = true;

    /// <summary>
    /// Whether the button is disabled
    /// </summary>
    [Parameter]
    public bool IsDisabled { get; set; } = false;

    /// <summary>
    /// Whether the button is in loading state (shows spinner and disables button)
    /// </summary>
    [Parameter]
    public bool IsLoading { get; set; } = false;

    /// <summary>
    /// Click event callback
    /// </summary>
    [Parameter]
    public EventCallback OnClick { get; set; }

    /// <summary>
    /// Additional CSS classes
    /// </summary>
    [Parameter]
    public string? CssClass { get; set; }

    private string GetVariantClass()
    {
        var classes = Variant switch
        {
            "primary" => "btn-primary",
            "outline" => "btn-outline",
            _ => "btn-secondary"
        };

        return string.IsNullOrEmpty(CssClass) ? classes : $"{classes} {CssClass}";
    }
}
