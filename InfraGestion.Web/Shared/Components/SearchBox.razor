@*
    SearchBox Component
    Componente reutilizable para barra de búsqueda
*@

<div class="search-box">
    <svg class="search-icon" viewBox="0 0 256 256" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z" />
    </svg>
    <input type="text" 
           class="search-input" 
           placeholder="@Placeholder" 
           value="@Value"
           @oninput="HandleInput" />
</div>

@code {
    /// <summary>
    /// Valor actual del campo de búsqueda
    /// </summary>
    [Parameter]
    public string Value { get; set; } = string.Empty;

    /// <summary>
    /// Callback cuando cambia el valor
    /// </summary>
    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    /// <summary>
    /// Texto placeholder del campo
    /// </summary>
    [Parameter]
    public string Placeholder { get; set; } = "Buscar...";

    /// <summary>
    /// Callback cuando se realiza una búsqueda
    /// </summary>
    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private async Task HandleInput(ChangeEventArgs e)
    {
        var newValue = e.Value?.ToString() ?? string.Empty;
        Value = newValue;
        await ValueChanged.InvokeAsync(newValue);
        await OnSearch.InvokeAsync(newValue);
    }
}
